<script> alert("Người dùng chưa có!") </script>
{{/if}}

{{#if passwordFalse}}
<script> alert("Mật khẩu chưa đúng!") </script>
{{/if}}
<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <img src="images/icon/kiotvietLogo.png" alt="CoolAdmin" />
                        </a>
                    </div>
                    <div class="login-form">
                        <form action="/login" method="POST">
                            <div class="form-group">
                                <label>Nhập email</label>
                                <input class="au-input au-input--full" type="email" name="email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label>Nhập mật khẩu</label>
                                <input class="au-input au-input--full" type="password" name="password"
                                    placeholder="Password">
                            </div>
                            <div class="login-checkbox">
                                <label>
                                    <a href="#">Quên mật tài khoản?</a>
                                </label>
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Đăng nhập</button>
                            {{!-- <div class="social-login-content">
                                    <div class="social-button">
                                        <button class="au-btn au-btn--block au-btn--blue m-b-20">sign in with facebook</button>
                                        <button class="au-btn au-btn--block au-btn--blue2">sign in with twitter</button>
                                    </div>
                                </div> --}}
                        </form>
                        <div class="register-link">
                            <p>
                                Bạn chưa có tài khoản?
                                <a href="#">Đăng ký tài khoản</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>